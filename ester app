  <script>
    let prize = '';
    let stage = 0;

    function showEgg(selectedPrize) {
      prize = selectedPrize;
      stage = 0;
      document.getElementById('main-menu').style.display = 'none';
      document.getElementById('egg-screen').style.display = 'flex';
      document.getElementById('egg').textContent = 'ü•ö';
      document.getElementById('prize-text').style.display = 'none';
    }

    function nextStage() {
      stage++;
      const egg = document.getElementById('egg');
      const prizeText = document.getElementById('prize-text');

      if (stage === 1) {
        egg.textContent = 'ü•ö (—Ç—Ä–µ—Å–Ω—É–ª–æ)';
      } else if (stage === 2) {
        egg.textContent = '‚ú®üê£‚ú®';
      } else if (stage === 3) {
        egg.style.display = 'none';
        prizeText.textContent = –í—ã–ø–∞–ª–æ: ${prize};
        prizeText.style.display = 'block';
      }
    }

    function goBack() {
      document.getElementById('main-menu').style.display = 'flex';
      document.getElementById('egg-screen').style.display = 'none';
      document.getElementById('egg').style.display = 'block';
    }
  </script>
